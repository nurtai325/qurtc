құрылым кітап {
    коды бүтін,
    атауы жол,
    беттерСаны бүтін,
    бағасы бөлшек,
    қолжетімді шын,
}

құрылым кітапхана {
    атауы жол,
    кітаптарСаны бүтін,
    кітаптар [20]кітап,
    жалпыБағасы бөлшек,
}

функция кітап кітапЖасау(коды бүтін, атауы жол, беттерСаны бүтін, бағасы бөлшек) {
    айнымалы жаңаКітап кітап;
    жаңаКітап.коды = коды;
    жаңаКітап.атауы = атауы;
    жаңаКітап.беттерСаны = беттерСаны;
    жаңаКітап.бағасы = бағасы;
    жаңаКітап.қолжетімді = иә;
    қайтар жаңаКітап;
}

функция бөлшек жалпыБағаЕсептеу(кітапханаПен кітапхана) {
    айнымалы қосынды бөлшек = 0.0;
    
    қайтала(айнымалы i бүтін = 0; i < кітапханаПен.кітаптарСаны; i = i + 1) {
        егер(кітапханаПен.кітаптар[i].қолжетімді == иә) {
            қосынды = қосынды + кітапханаПен.кітаптар[i].бағасы;
        }
    }
    
    қайтар қосынды;
}

функция бүтін қымбатКітаптарСанау(кітапханаПен кітапхана) {
    айнымалы санауыш бүтін = 0;
    
    қайтала(айнымалы i бүтін = 0; i < кітапханаПен.кітаптарСаны; i = i + 1) {
        егер(кітапханаПен.кітаптар[i].бағасы >= 5000.0) {
            санауыш = санауыш + 1;
        }
    }
    
    қайтар санауыш;
}

функция ештеңе кітапАлу(кітапПен кітап) {
    кітапПен.қолжетімді = жоқ;
}

функция ештеңе кітапҚайтару(кітапПен кітап) {
    кітапПен.қолжетімді = иә;
}

функция ештеңе негізгі() {
    айнымалы менініКітапханам кітапхана;
    менініКітапханам.атауы = "ДанаКітап";
    менініКітапханам.кітаптарСаны = 4;
    
    менініКітапханам.кітаптар[0] = кітапЖасау(1001, "Абай жолы", 520, 3500.0);
    менініКітапханам.кітаптар[1] = кітапЖасау(1002, "Қан мен тер", 380, 2800.0);
    менініКітапханам.кітаптар[2] = кітапЖасау(1003, "Махаббат тарихы", 245, 6200.0);
    менініКітапханам.кітаптар[3] = кітапЖасау(1004, "Математика", 680, 8500.0);
    
    кітапАлу(менініКітапханам.кітаптар[1]);
    кітапАлу(менініКітапханам.кітаптар[3]);
    
    менініКітапханам.жалпыБағасы = жалпыБағаЕсептеу(менініКітапханам);
    айнымалы қымбатКітаптар бүтін = қымбатКітаптарСанау(менініКітапханам);
    
    жаз("=== КІТАПХАНА СТАТИСТИКАСЫ ===");
    жаз("Атауы: ");
    жаз(менініКітапханам.атауы);
    жаз("Қолжетімді кітаптардың құны: ");
    жаз(менініКітапханам.жалпыБағасы);
    жаз("Қымбат кітаптар саны: ");
    жаз(қымбатКітаптар);
}
