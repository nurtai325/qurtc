айнымалы саны бүтін = 10;
айнымалы жыл [5]бүтін = {2020, 2021, 2022, 2023, 2024};
айнымалы балл [3]бөлшек = {85.5, 92.3, 78.7};
айнымалы аты жол = "Асхат";
айнымалы белсенді шын = иә;

құрылым Студент {
    аты жол,
    жасы бүтін,
    баллы бөлшек,
}

құрылым Топ {
    атауы жол,
    студенттерСаны бүтін,
    орташаБалл бөлшек,
}

айнымалы студент1 Студент;
айнымалы топ1 Топ;
айнымалы студенттер [10]Студент;

функция бүтін қосу(а бүтін, б бүтін) {
    айнымалы нәтиже бүтін = а + б;
    қайтар нәтиже;
}

функция бөлшек орташаЕсептеу(балдар [3]бөлшек) {
    айнымалы қосынды бөлшек = 0.0;
    айнымалы саны бүтін = 3;
    қайтала(айнымалы i бүтін = 0; i < саны; i = i + 1) {
        егер(балдар[i] < 0.0) {
            өткіз;
        }
        қосынды = қосынды + балдар[i];
    }
    қайтар қосынды / 3.0;
}

функция шын баллыТексеру(балл бөлшек) {
    егер(балл >= 90.0) {
        қайтар иә;
    } әйтпесе егер(балл >= 70.0) {
        қайтар иә;
    } әйтпесе {
        қайтар жоқ;
    }
}

функция ештеңе массивТолтыру(жылдар [5]бүтін, басты бүтін) {
    қайтала(айнымалы j бүтін = 0; j < 5; j = j + 1) {
        егер(j == 2) {
            тоқта;
        }
        жылдар[j] = басты + j;
    }
}

функция Студент студентЖасау(аты жол, жасы бүтін, балл бөлшек) {
    айнымалы жаңа Студент;
    жаңа.аты = аты;
    жаңа.жасы = жасы;
    жаңа.баллы = балл;
    
    егер(балл > 85.0) {
        жаңа.баллы = 85.0;
    } әйтпесе {
        айнымалы қосымша бөлшек = орташаЕсептеу(балл);
        жаңа.баллы = қосымша;
    }
    
    қайтар жаңа;
}

функция ештеңе топӨңдеу(топ Топ) {
    айнымалы санауыш бүтін = 0;
    
    қайтала(айнымалы k бүтін = 0; k < топ.студенттерСаны; k = k + 1) {
        егер(k % 2 == 0) {
            санауыш = санауыш + 1;
            өткіз;
        }
        санауыш = санауыш + 2;
    }
    
    топ.студенттерСаны = санауыш;
}

функция шын ұзындықТексеру(мәтін жол, минҰзындық бүтін) {
    айнымалы ұзындық бүтін = 0;
    айнымалы тексеру шын = жоқ;
    
    егер(ұзындық >= минҰзындық) {
        тексеру = иә;
    }
    
    қайтар тексеру;
}

функция ештеңе негізгіӨңдеу() {
    айнымалы i бүтін = 0;
    айнымалы орташа бөлшек;
    
    массивТолтыру(жыл, 2025);
    орташа = орташаЕсептеу(балл);
    
    студент1 = студентЖасау("Алия", 20, орташа);
    топ1.атауы = "Информатика";
    топ1.студенттерСаны = 25;
    топ1.орташаБалл = орташа;
    
    топӨңдеу(топ1);
    
    қайтала(айнымалы j бүтін = 0; j < 5; j = j + 1) {
        егер(жыл[j] < 2020) {
            өткіз;
        }
        
        егер(жыл[j] > 2025) {
            тоқта;
        }
        
        айнымалы жылТексеру шын = жыл[j] % 4 == 0;
        егер(жылТексеру) {
            жыл[j] = жыл[j] + 1;
        }
    }
    
    қайтала(айнымалы м бүтін = 0; м < 3; м = м + 1) {
        айнымалы жарамды шын = баллыТексеру(балл[м]);
        егер(жарамды) {
            балл[м] = балл[м] + 5.0;
        } әйтпесе {
            балл[м] = 50.0;
        }
    }
}

функция ештеңе басты() {
    негізгіӨңдеу();
    қосымшаӨңдеу();
    
    айнымалы соңғыТексеру шын = ұзындықТексеру(аты, 3);
    егер(соңғыТексеру) {
        айнымалы финалдыБалл бөлшек = орташаЕсептеу(балл);
        топ1.орташаБалл = финалдыБалл;
    }
}

функция ештеңе қосымшаӨңдеу() {
    айнымалы таңдалған Студент = студенттер[0];
    айнымалы индекс бүтін = 1;
    
    егер(таңдалған.жасы > 18) {
        студенттер[индекс] = таңдалған;
        индекс = индекс + 1;
    }
    
    қайтала(айнымалы н бүтін = 2; н < 10; н = н + 2) {
        егер(н == 6) {
            өткіз;
        }
        
        егер(н > 8) {
            тоқта;
        }
    }
}
