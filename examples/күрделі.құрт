функция бүтін факториал(сан бүтін) {
    егер(сан <= 1) {
        айнымалы нәтиже бүтін = 1;
        қайтар нәтиже;
    }
    
    айнымалы нәтиже бүтін = 1;
    
    қайтала(айнымалы санауыш бүтін = 2; санауыш <= сан; санауыш = санауыш + 1) {
        нәтиже = нәтиже * санауыш;
        
        егер(нәтиже > 10000) {
            жаз("Тым үлкен нәтиже!");
            тоқта;
        }
    }
    
    қайтар нәтиже;
}

функция ештеңе сандарТалдау(бастау бүтін, соңы бүтін) {
    айнымалы жұпСанауыш бүтін = 0;
    айнымалы тақСанауыш бүтін = 0;
    
    қайтала(айнымалы i бүтін = бастау; i <= соңы; i = i + 1) {
        егер(i < 0) {
            өткіз;
        }
        
        айнымалы қалдық бүтін = i % 2;
        егер(қалдық == 0) {
            жұпСанауыш = жұпСанауыш + 1;
        } әйтпесе {
            тақСанауыш = тақСанауыш + 1;
        }
        
        егер(i == 15) {
            жаз("15-ке жеттік!");
        }
        
        егер(жұпСанауыш >= 8) {
            жаз("Жеткілікті жұп сан табылды");
            тоқта;
        }
    }
    
    жаз("Жұп сандар: ");
    жаз(жұпСанауыш);
    жаз("Тақ сандар: ");
    жаз(тақСанауыш);
}

функция шын жайСанБа(сан бүтін) {
    айнымалы бір бүтін = 1;
    егер(сан <= бір) {
        қайтар жоқ;
    }
    
    айнымалы екі бүтін = 2;
    егер(сан == екі) {
        қайтар иә;
    }
    
    қайтала(айнымалы i бүтін = 2; i < сан; i = i + 1) {
        айнымалы қалдық бүтін = сан % i;
        егер(қалдық == 0) {
            қайтар жоқ;
        }
        
        егер(i > 10) {
            тоқта;
        }
    }
    
    қайтар иә;
}

функция ештеңе негізгі() {
    жаз("=== ФАКТОРИАЛ ЕСЕПТЕУ ===");
    айнымалы алты бүтін = 6;
    айнымалы факториалНәтиже бүтін = факториал(алты);
    жаз("6! = ");
    жаз(факториалНәтиже);
    
    жаз("=== САНДАР ТАЛДАУЫ ===");
    айнымалы бір бүтін = 1;
    айнымалы жиырма бүтін = 20;
    сандарТалдау(бір, жиырма);
    
    жаз("=== ЖАЙЛЫҚТЫ ТЕКСЕРУ ===");
    айнымалы тестСаны бүтін = 17;
    айнымалы жайБа шын = жайСанБа(тестСаны);
    жаз("17 жай сан ба: ");
    егер(жайБа == иә) {
        жаз("Иә");
    } әйтпесе {
        жаз("Жоқ");
    }
}
