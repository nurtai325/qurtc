функция бүтін ұлкенТабу(сандар [10]бүтін, саны бүтін) {
    айнымалы ұлкен бүтін = сандар[0];
    
    қайтала(айнымалы i бүтін = 1; i < саны; i = i + 1) {
        егер(сандар[i] > ұлкен) {
            ұлкен = сандар[i];
        }
    }
    
    қайтар ұлкен;
}

функция бүтін оңСанауыш(сандар [10]бүтін, саны бүтін) {
    айнымалы санауыш бүтін = 0;
    
    қайтала(айнымалы i бүтін = 0; i < саны; i = i + 1) {
        егер(сандар[i] > 0) {
            санауыш = санауыш + 1;
        }
    }
    
    қайтар санауыш;
}

функция ештеңе негізгі() {
    айнымалы сандарТізімі [10]бүтін;
    айнымалы сандарСаны бүтін = 6;
    
    сандарТізімі[0] = 15;
    сандарТізімі[1] = -3;
    сандарТізімі[2] = 42;
    сандарТізімі[3] = 0;
    сандарТізімі[4] = -8;
    сандарТізімі[5] = 23;
    
    жаз("=== САНДАР ТІЗІМІ ===");
    қайтала(айнымалы i бүтін = 0; i < сандарСаны; i = i + 1) {
        жаз("Индекс ");
        жаз(i);
        жаз(": ");
        жаз(сандарТізімі[i]);
    }
    
    айнымалы ұлкенСан бүтін = ұлкенТабу(сандарТізімі, сандарСаны);
    айнымалы оңСандар бүтін = оңСанауыш(сандарТізімі, сандарСаны);
    
    жаз("=== ТАЛДАУ ===");
    жаз("Ең үлкен сан: ");
    жаз(ұлкенСан);
    жаз("Оң сандар саны: ");
    жаз(оңСандар);
}
